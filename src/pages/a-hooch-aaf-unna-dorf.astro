---
import BaseLayout from "../layouts/BaseLayout.astro";
import textHtml from "../assets/texte/a-hooch-aaf-unna-dorf.html?raw";

export const chronik = {
  title: "A Hooch aaf unna Dorf uu d' Pechgräina Leit",
  subtitle: "Erzählt und aufgeschrieben von Erich Heinzl",
  date: "2025-12-21",
  updated: "2026-01-27",
  bereich: "Texte, Stimmen und Erinnerungen",
  href: "/a-hooch-aaf-unna-dorf",
  order: 2,
};

const sourceShort =
  "Aus: Pechgrün am Fuße des Erzgebirges – ein verschüttetes Dorf. Geschichte und Erinnerungen, Band 3 (1998), hg. von Anton Strunz und Erich Heinzl.";

function escapeHtml(s: string): string {
  return s
    .replaceAll("&", "&amp;")
    .replaceAll("<", "&lt;")
    .replaceAll(">", "&gt;")
    .replaceAll('"', "&quot;")
    .replaceAll("'", "&#039;");
}

function linkPersons(rawHtml: string): string {
  // [[I500020|Fellner Seff]]
  const re = /\[\[([A-Za-z]\d+)\|([^\]]+?)\]\]/g;

  return rawHtml.replace(re, (_match, id, label) => {
    const safeId = encodeURIComponent(id);
    const safeLabel = escapeHtml(label);

    return `<a href="/internal/ged-person?id=${safeId}" class="person-link" target="_blank" rel="noopener">${safeLabel}</a>`;
  });
}

const textHtmlLinked = linkPersons(textHtml);
---

<BaseLayout title={chronik.title}>
  <article class="text-ort">
    <header class="head">
      <h1>{chronik.title}</h1>
      <p class="subtitle">{chronik.subtitle}</p>

      <p class="meta">
        <span class="source">{sourceShort}</span>
      </p>
    </header>

    <section class="text" lang="de" set:html={textHtmlLinked} />
  </article>
</BaseLayout>

<style>
  /* ===== Grundlayout ===== */
  .text-ort {
    width: min(860px, 100%);
    margin-left: 0;
    margin-right: auto;
  }

  /* ===== Kopf ===== */
  .head {
    margin-bottom: 1.6rem;
  }

  .subtitle {
    margin: -0.35rem 0 0.9rem 0;
    font-size: 1.15rem;
    line-height: 1.35;
    color: rgba(0, 0, 0, 0.72);
  }

  .meta {
    margin: 0 0 0.9rem 0;
    font-size: 0.95rem;
    line-height: 1.35;
    color: rgba(0, 0, 0, 0.6);
  }

  /* ===== Fließtext ===== */
  .text {
    margin-top: 1.6rem;
    font-size: 1.08rem;
    line-height: 1.75;

    /* Buchsatz */
    text-align: left;
    hyphens: auto;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;

    /* Seitenzähler */
    counter-reset: page;
  }

  .text :global(p) {
    margin: 0 0 0.9rem 0;
    hyphens: none;
    word-break: normal;
    overflow-wrap: break-word;
    word-spacing: 0.03em;
    line-height: 1.55;
  }

  /* ===== Abschnitt / "Seite" =====
     Alle 5 Absätze:
     - deutlicher Abstand
     - feine Linie
     - Seitenzahl rechts, oberhalb der Linie
  */
  .text :global(p:nth-of-type(5n + 1)) {
    margin-top: 6rem;
    padding-top: 1.6rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);

    position: relative;
    counter-increment: page;
  }

  .text :global(p:nth-of-type(5n + 1))::before {
    content: counter(page);
    position: absolute;
    right: 0;
    top: -20px;

    font-size: 0.8rem;
    line-height: 1;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.28);
    letter-spacing: 0.02em;
    font-variant-numeric: tabular-nums;

    background: white;
    padding-left: 0.5rem;
  }

  /* Erste Seite ohne Linie / Zahl */
  .text :global(p:nth-of-type(1)) {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }

  .text :global(p:nth-of-type(1))::before {
    content: none;
  }

  :global(.text-ort .text a.person-link) {
    text-decoration: none !important;
    color: inherit !important;
    font-weight: 500;   /* minimal stärker als normal (400) */
  }

  :global(.text-ort .text a.person-link:hover),
  :global(.text-ort .text a.person-link:focus-visible) {
    text-decoration: underline !important;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

</style>
